<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="game"
            type="com.gamerankr.fragment.GameBasic" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.game.GameFragment">

        <ImageView
            android:id="@+id/gameCoverArt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Game cover art"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:imageUrl="@{game.ports.get(0).small_image_url}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@{game.title}"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/gameCoverArt" />

    </android.support.constraint.ConstraintLayout>
</layout>